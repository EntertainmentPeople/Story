<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.klj.story">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".NewStoryActivity" />
        <activity android:name=".MyStoryActivity" />
        <activity android:name=".BrowseRecodeActivity" />
        <activity android:name=".MineActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".UpdateNickNameActivity" />
        <activity android:name=".UpdateSexActivity" />
        <activity android:name=".UpdateBirthdayActivity" />
        <activity android:name=".UpdateEmailActivity" />
        <activity android:name=".UpdatePwdActivity" />
        <activity android:name=".StoryDetailsActivity"/>
    </application>

</manifest>