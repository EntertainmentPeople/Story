<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_story_list_mineinfo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/listview_title_bg"
        android:clickable="true"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_story_list_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_story_list_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="#3263A3"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_story_list_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_story_list_nickname"
                android:layout_marginTop="2dp"
                android:textSize="20sp"
                android:text="评论" />

            <ImageView
                android:id="@+id/iv_story_list_commnum"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_commnum"
                 />
            <TextView
                android:id="@+id/tv_story_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="时间" />
        </RelativeLayout>
</LinearLayout>
